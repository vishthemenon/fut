<% content_for :page_title do %>
  Update Game: <%= @game.home_team.name %> vs <%= @game.away_team.name %>
<% end %>

<div class="mx-auto md:w-1/2 w-full">

  <%= form_with model: @game, class: "space-y-6" do |f| %>
    <div>
      <%= f.label "Score", class: "block text-sm font-medium text-gray-700 text-center" %>
      <div class="mt-1 flex flex-row justify-center">
        <%= f.number_field :home_score, autofocus: true, placeholder: "Home", class: "appearance-none w-half mx-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <%= f.number_field :away_score, placeholder: "Away", class: "appearance-none w-half mx-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <button type="submit" class="flex justify-center mx-auto py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      Update
    </button>
  <% end %>
</div>
