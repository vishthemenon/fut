<div class=" py-6 sm:px-6 lg:px-8">
  <div class="max-w-none mx-auto">
    <div class="bg-gray-100 overflow-hidden sm:rounded-lg sm:shadow">

      <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
          <div class="ml-4 mt-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <%= render "partials/user_avatar", { user: roster.user } %>
              </div>
              <div class="ml-4">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                  <%= roster.user.name %>
                </h3>
                <p class="text-sm text-gray-500">
                  <%= roster.user.email %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white px-4 py-4">
        <%= form_with model: roster.roster_teams.new, scope: :roster_team, url: roster_roster_teams_path(roster), method: :post do |f| %>
          <div class="mt-1">
            <%= f.collection_select :team, selectable_teams(roster), :id, :name, html: { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
          </div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 mt-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Add Team
          </button>
        <% end %>
      </div>

      <ul role="list" class="flex flex-col gap-2 px-4 py-4">
        <%= render partial: "partials/team_card", collection: roster.teams, as: :team %>
      </ul>
    </div>
  </div>
</div>